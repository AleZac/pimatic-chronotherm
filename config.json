# This is an example on how to load the plugin in the config.json. It is NOT the complete config file of Pimatic!

"plugins": [
  {
    "plugin": "cronoaccesospento"
  }
],

"devices": [
  {
    "id": "provacas",
    "class": "CronoAccesoSpentoDevice",
    "name": "Crono Acceso Spento",
    "cas1Ref": "$giorno1",
    "cas2Ref": "$giorno2",
    "cas3Ref": "$giorno3",
    "cas4Ref": "$giorno4",
    "cas5Ref": "$giorno5",
    "cas6Ref": "$giorno6",
    "cas7Ref": "$giorno7",
    "realtemperature": "$realtemperature",
    "interval": 240,
    "turnauto":5000,
    "offtemperature": 4
  }
]
